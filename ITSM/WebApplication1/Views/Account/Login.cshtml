@model WebApplication1.ViewModels.LoginModel

@{ 
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Trouble Cracker</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
</head>
<body class="text-center">
    <div class="row">
        <div class="col-md-4">

        </div>
        <div class="col-md-4">
            <div class="form-signin align-middle">
                <form class="form-signin" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                    <img class="mb-4" src="~/img/sticker.webp" alt="" width="72" height="72">
                    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                    <div class="validation" asp-validation-summary="ModelOnly" />
                    <div class="form-group">
                        <label class="sr-only" asp-for="Email">Email address</label>
                        <input type="text" id="inputEmail" class="form-control" required="" asp-for="Email" />
                        <span asp-validation-for="Email" />
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="Password">Password</label>
                        <input type="password" id="inputPassword" class="form-control" required="" asp-for="Password" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" value="remember-me"> Remember me
                        </label>
                    </div>

                    <div class="form-group"><input class="btn btn-lg btn-primary btn-block" type="submit" value="Sign in"></div>
                </form>
            </div>
            <div id="wt-sky-root ">
                &copy; @DateTime.Now.Year - Trouble Cracker - Ирина - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </div>
        <div class="col-md-4">

        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
</body>

</html>


